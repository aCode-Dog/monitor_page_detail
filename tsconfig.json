{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": true,
		"allowUnusedLabels": true,
		"baseUrl": ".",
		"outDir":"./",
		"checkJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		
		"jsx": "react",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "esnext"
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist"
	],
	
}
